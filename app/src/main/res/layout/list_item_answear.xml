<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:background="@color/item_navigation_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:id="@+id/txt_like"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/proxima_nova"/>
                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_thumb_up_not_active_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp">
                <TextView
                    android:id="@+id/txt_dislike"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/proxima_nova"/>
                <ImageView
                    android:id="@+id/img_dislike"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_thumb_down_not_active_24dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_desc_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_title"
        android:gravity="right">
        <ImageView
            android:id="@+id/img_profile_answer"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/man_icon_1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center">
            <TextView
                android:id="@+id/txt_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/Title_Question"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_comment_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment, "
                    android:textSize="12sp"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/price_shop"/>
                <TextView
                    android:id="@+id/txt_date_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12sp"
                    android:fontFamily="@font/proxima_nova" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

</LinearLayout>