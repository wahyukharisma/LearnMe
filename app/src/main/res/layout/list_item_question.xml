<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/item_question"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="0.1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/txt_like"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="200"
                            android:gravity="center"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/proxima_nova"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"/>
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_thumb_up_dark_blue_24dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@id/ll_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/txt_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="200"
                            android:gravity="center"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/proxima_nova"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"/>
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_comment_green_24dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_title_question"
                        android:layout_width="270dp"
                        android:layout_height="25dp"
                        android:text="Title"
                        android:textSize="19sp"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/Title_Question"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=". . ."
                        android:textSize="19sp"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/Title_Question"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="22dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/txt_desc_question"
                        android:layout_width="250dp"
                        android:layout_height="22dp"
                        android:text="Description"
                        android:textSize="18sp"
                        android:fontFamily="@font/proxima_nova"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:text=". . ."
                        android:textSize="18sp"
                        android:fontFamily="@font/proxima_nova"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_date_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1 May 2019"
                    android:textSize="16sp"
                    android:fontFamily="@font/proxima_nova"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>