<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp"
    android:id="@+id/item_question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Background_List_Question"
                android:layout_marginEnd="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="200"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/proxima_nova"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_thumb_up_blue_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="200"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/proxima_nova"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/chat_green" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_title_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="17sp"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/Title_Question"/>
                <TextView
                    android:id="@+id/txt_desc_question"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp"
                    android:fontFamily="@font/proxima_nova"/>
                <TextView
                    android:id="@+id/txt_date_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 May 2019"
                    android:textSize="15sp"
                    android:fontFamily="@font/proxima_nova"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</android.support.v7.widget.CardView>