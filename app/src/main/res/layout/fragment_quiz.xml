<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/frame_question"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@color/Frame_queastion">
        <TextView
            android:id="@+id/txt_quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/text_category"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/proxima_nova"/>
        <TextView
            android:id="@+id/txt_quiz_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/text_category"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/proxima_nova"/>
        <TextView
            android:id="@+id/txt_question_index"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="Question"
            android:fontFamily="@font/proxima_nova"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/frame_question">

        <RadioGroup
            android:id="@+id/radio_group_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">
            <RadioButton
                android:id="@+id/radio_button_a"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Answer 1"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/background_navigation_color"/>
            <RadioButton
                android:id="@+id/radio_button_b"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Answer 2"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/background_navigation_color"/>
            <RadioButton
                android:id="@+id/radio_button_c"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Answer 3"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/background_navigation_color"/>
            <RadioButton
                android:id="@+id/radio_button_d"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Answer 4"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/background_navigation_color"/>
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>