<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:src="@drawable/header_layout"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_navigation_color">
        <ImageView
            android:id="@+id/btn_close_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/proxima_nova"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_edit_profile"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_usernmae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_username_change"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/proxima_nova"
                android:hint="@string/et_username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/new_account_color"
                android:textColorHighlight="@color/text_color_hint_light"
                android:textColorHint="@color/text_color_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_email_change"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/proxima_nova"
                android:hint="@string/et_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/new_account_color"
                android:textColorHighlight="@color/text_color_hint_light"
                android:textColorHint="@color/text_color_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_input_one_signin"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:fontFamily="@font/proxima_nova"
            android:hint="@string/et_firstname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/new_account_color"
            android:textColorHighlight="@color/text_color_hint_light"
            android:textColorHint="@color/text_color_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_input_one_signin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/proxima_nova"
                android:hint="@string/et_lastname"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/new_account_color"
                android:textColorHighlight="@color/text_color_hint_light"
                android:textColorHint="@color/text_color_hint" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_input_one_signin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/proxima_nova"
                android:hint="@string/et_address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/new_account_color"
                android:textColorHighlight="@color/text_color_hint_light"
                android:textColorHint="@color/text_color_hint" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_input_one_signin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:fontFamily="@font/proxima_nova"
                android:hint="@string/et_phone"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/new_account_color"
                android:textColorHighlight="@color/text_color_hint_light"
                android:textColorHint="@color/text_color_hint"
                android:maxLength="12"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_gradient_style"
            android:text="@string/btn_change"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/proxima_nova"/>


    </LinearLayout>

</RelativeLayout>