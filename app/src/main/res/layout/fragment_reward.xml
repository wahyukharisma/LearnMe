<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_navigation_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_reward"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/reward_podium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_navigation_color"
        android:layout_below="@+id/toolbar_title">
        <RelativeLayout
            android:id="@+id/txt_reward"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/txt_celebration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CONGRATULATIONS"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/proxima_nova" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/txt_celebration"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/LL_champ_2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="11dp">
                    <TextView
                        android:id="@+id/txt_champ_2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Winner 2"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="20sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_point_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_champ_1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/txt_champ_1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Winner 1"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="20sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_point_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_champ_3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:id="@+id/txt_champ_3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Winner 3"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="20sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/txt_point_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/proxima_nova"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/txt_reward">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/podium_background"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reward_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reward_podium"
        android:gravity="center"
        android:background="@color/background_search_reward">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_date_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Date"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorAccent" />
            <Spinner
                android:id="@+id/spin_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"></Spinner>
            <Spinner
                android:id="@+id/spin_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"></Spinner>
            <Button
                android:id="@+id/btn_search_rank"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Search"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/btn_gradient_style_2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/proxima_nova"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reward_search">
        <ScrollView
            android:id="@+id/scroll_user"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/scroll_user"
            android:orientation="horizontal"
            android:background="@color/background_search_reward">

            <TextView
                android:id="@+id/txt_my_rank_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Rank :"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_my_rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_point_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Point :"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txt_my_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>